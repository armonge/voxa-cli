{
  "compilerOptions": {
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2018",
    "outDir": "lib",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["test/out/**/*"]
}
